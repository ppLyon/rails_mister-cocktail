
<div class="container">
  <div class="row">
    <h1><%= @cocktail.name %></h1>
  </div>

  <div class="row">
    <% @cocktail.doses.each do |dose| %>
      <li><%= dose.description %> of <%= dose.ingredient.name %><%= link_to " Delete this dose", dose_path(dose), data: {:confirm => "Are you sure?"},  method: :delete %></li>
      </%></li>
    <% end %>
  </div>

  <div class="row">
    <%= link_to "Add a dose", new_cocktail_dose_path(@cocktail) %>
    <%= link_to "Edit the recipe", edit_cocktail_path(@cocktail) %>
  </div>

  <div class="row">
  <%= link_to "Delete Cocktail", cocktail_path(@cocktail),
      method: :delete,
      data: { confirm: "Are you sure?" }  %>
  </div>

  <div class="row">
   <%= link_to "Get back to cocktail", cocktails_path %>
  </div>
</div>


